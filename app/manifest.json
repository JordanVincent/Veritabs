{
  "manifest_version": 2,

  "name": "Veritabs",
  "description": "Organize your tabs vertically",
  "version": "1.2.1",
  "minimum_chrome_version": "21.0",

  "icons": { 
    "16": "img/icons/icon16.png",
    "48": "img/icons/icon48.png",
    "128": "img/icons/icon128.png" 
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles/style.css"],
      "js": ["lib/jquery.js", "lib/jqueryui.js", "js/script.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_icon": {                    
      "19": "img/icons/icon19.png",    
      "38": "img/icons/icon38.png"     
    },
    "default_title": "Veritabs",      
    "default_popup": "views/popup.html"        
  },

  "web_accessible_resources": [
    "img/cross-grey.png",
    "img/cross-red.png",
    "img/empty.png",
    "img/fix-grey.png",
    "img/fix-white.png",
    "img/new-grey.png",
    "img/new-white.png",
    "img/resize-grey.png",
    "img/resize-white.png",
    "img/key-grey.png",
    "img/key-white.png",
    "img/arrow-grey.png",
    "img/arrow-white.png",
    "img/house-grey.png",
    "img/house-white.png",
    "img/reload-grey.png",
    "img/reload-white.png",
    "img/three-squares-grey.png",
    "img/three-squares-white.png",
    "img/icons/icon19off.png",    
    "img/icons/icon38off.png"
  ]
}